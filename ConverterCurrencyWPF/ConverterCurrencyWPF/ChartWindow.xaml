<Window x:Class="ConverterCurrencyWPF.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConverterCurrencyWPF"
        mc:Ignorable="d"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="ChartWindow" Height="450" Width="800">
    <Grid>
        <lvc:CartesianChart x:Name="Chart" Width="800" Margin="0,79,0,0"/>
        <Button x:Name="ChartForMounth" Content="Month" HorizontalAlignment="Left" Margin="376,10,0,0" VerticalAlignment="Top" Click="ChartForMounth_Click" Height="70" Width="350" Background="White"/>
        <Button x:Name="ChartForWeek" Content="Week" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top" Click="ChartForWeek_Click" Height="70" Width="350" Background="White"/>
    </Grid>
</Window>
